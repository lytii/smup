<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_weight="1"
              android:background="@color/black_overlay"
              android:layout_height="match_parent">

      <!--layout for field of bases-->
      <RelativeLayout
         android:id="@id/field_layout"
         android:layout_marginTop="@dimen/margin"
         android:layout_marginBottom="@dimen/margin"
         android:layout_marginStart="15dp"
         android:layout_marginEnd="15dp"
         android:layout_width="match_parent"
         android:layout_height="wrap_content">

         <ImageView
            android:id="@+id/baseCard"
            android:layout_width="@dimen/base_card_width"
            android:layout_height="@dimen/base_card_height"
            android:layout_centerVertical="true"
            android:foreground="@drawable/baseiconborder"
            android:padding="1dp"
            android:src="@drawable/base" />
         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_card_height"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/baseCard"
            android:orientation="vertical">

            <TextView
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:layout_gravity="end"
               android:layout_weight="1"
               android:textSize="@dimen/field_text_size"
               android:text="12 of 12"
               android:textColor="@color/whiteBorder"
               style="@style/AddWhiteShadow"
               android:textStyle="bold" />

            <TextView
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:layout_gravity="end"
               android:layout_weight="1"
               android:textSize="@dimen/field_text_size"
               android:textColor="@color/whiteBorder"
               style="@style/AddWhiteShadow"
               android:text="3 _ 2"
               android:textStyle="bold" />
         </LinearLayout>
      </RelativeLayout>
</LinearLayout>